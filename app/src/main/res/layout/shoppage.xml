<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/cc_shop"
    android:orientation="vertical">

    <Button
        android:id="@+id/btn_back"
        android:layout_width="90dp"
        android:layout_height="63dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="22dp"
        android:layout_marginRight="7dp"
        android:background="@drawable/button"
        android:text="Back"
        android:contentDescription="back"
        android:textColor="#C9BDFC"
        android:textSize="18dp" />


    <Button
        android:id="@+id/btn_use"
        android:layout_width="218dp"
        android:layout_height="80dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="635dp"
        android:layout_marginRight="98dp"
        android:background="@drawable/button"
        android:textColor="#C9BDFC"
        android:textSize="18dp" />

    <TextView
        android:id="@+id/coinText"
        android:layout_width="201dp"
        android:layout_height="132dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="7dp"
        android:fontFamily="@font/font"
        android:includeFontPadding="false"
        android:text="placeholder"
        android:textSize="48sp" />

    <ImageButton
        android:id="@+id/BlueCart"
        android:layout_width="127dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="489dp"
        android:layout_marginRight="143dp"
        android:contentDescription="Add blue cart to your items"
        app:srcCompat="@drawable/bluecart" />

    <ImageButton
        android:id="@+id/Cart"
        android:layout_width="127dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="490dp"
        android:layout_marginRight="276dp"
        android:contentDescription="default cart"
        app:srcCompat="@drawable/cart" />

    <ImageButton
        android:id="@+id/CatCart"
        android:layout_width="127dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="490dp"
        android:layout_marginRight="9dp"
        android:contentDescription="Add cat cart to your items"
        app:srcCompat="@drawable/catcart" />

</RelativeLayout>